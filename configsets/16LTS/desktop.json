{
  "pre-install-commands": [
    "echo \"deb https://dl.bintray.com/resin-io/debian stable etcher\" | sudo tee /etc/apt/sources.list.d/etcher.list",
    "sudo apt-key adv --keyserver keyserver.ubuntu.com --recv-keys 379CE192D401AB61",
    "sudo apt-get update --yes",
    "echo 'debconf opera-stable/add-deb-source select true' | sudo debconf-set-selections",
    "echo 'debconf opera-stable/add-deb-source seen true' | sudo debconf-set-selections"
  ],
  "apt-repositories": [
    "ppa:daniruiz/flat-remix",
    "ppa:noobslab/themes"
  ],
  "apt-packages": [
    "inkscape",
    "gimp",
    "vlc",
    "unity-tweak-tool",
    "flat-remix",
    "arc-theme",
    "etcher-electron"
  ],
  "deb-packages": [
    {
      "name": "google-chrome-stable",
      "url": "https://dl.google.com/linux/direct/google-chrome-stable_current_amd64.deb"
    },
    {
      "name": "skypeforlinux",
      "url": "https://go.skype.com/skypeforlinux-64.deb"
    },
    {
      "name": "discord",
      "url": "https://discordapp.com/api/download?platform=linux&format=deb"
    },
    {
      "name": "opera-stable",
      "url": "https://www.opera.com/download/get/?id=44006&amp;location=415&amp;nothanks=yes&amp;sub=marine&utm_tryagain=yes"
    }
  ],
  "tar-applications": [
    {
      "name": "telegram",
      "url": "https://telegram.org/dl/desktop/linux",
      "extension": "tar.xz",
      "executable": "Telegram/Telegram"
    }
  ],
  "post-install-commands": [
    "gsettings set org.compiz.unityshell:/org/compiz/profiles/unity/plugins/unityshell/ background-color '#000000ff'",
    "gsettings set org.compiz.unityshell:/org/compiz/profiles/unity/plugins/unityshell/ icon-size 44",
    "gsettings set org.compiz.unityshell:/org/compiz/profiles/unity/plugins/unityshell/ launcher-opacity 0.8",
    "gsettings set com.canonical.indicator.datetime time-format '12-hour'",
    "gsettings set com.canonical.indicator.datetime show-seconds true",
    "gsettings set com.canonical.indicator.datetime show-date true",
    "gsettings set com.canonical.indicator.datetime show-day true",
    "gsettings set com.canonical.indicator.power show-percentage true",
    "gsettings set com.canonical.indicator.power show-time true",
    "gsettings set com.canonical.indicator.session show-real-name-on-panel true",
    "gsettings set org.compiz.core:/org/compiz/profiles/unity/plugins/core/ hsize 4",
    "gsettings set org.compiz.core:/org/compiz/profiles/unity/plugins/core/ vsize 2",
    "gsettings set org.compiz.expo:/org/compiz/profiles/unity/plugins/expo/ selected-color '#ffff00ff'",
    "gsettings set org.compiz.grid:/org/compiz/profiles/unity/plugins/grid/ use-desktop-average-color false",
    "gsettings set org.compiz.grid:/org/compiz/profiles/unity/plugins/grid/ outline-color '#ffff00ff'",
    "gsettings set org.compiz.grid:/org/compiz/profiles/unity/plugins/grid/ fill-color '#29992e50'",
    "gsettings set org.compiz.grid:/org/compiz/profiles/unity/plugins/grid/ top-left-corner-action 7",
    "gsettings set org.compiz.grid:/org/compiz/profiles/unity/plugins/grid/ top-edge-action 10",
    "gsettings set org.compiz.grid:/org/compiz/profiles/unity/plugins/grid/ top-right-corner-action 9",
    "gsettings set org.compiz.grid:/org/compiz/profiles/unity/plugins/grid/ left-edge-action 4",
    "gsettings set org.compiz.grid:/org/compiz/profiles/unity/plugins/grid/ right-edge-action 6",
    "gsettings set org.compiz.grid:/org/compiz/profiles/unity/plugins/grid/ bottom-left-corner-action 1",
    "gsettings set org.compiz.grid:/org/compiz/profiles/unity/plugins/grid/ bottom-edge-action 2",
    "gsettings set org.compiz.grid:/org/compiz/profiles/unity/plugins/grid/ bottom-right-corner-action 3",
    "gsettings set org.compiz.resize:/org/compiz/profiles/unity/plugins/resize/ mode 2",
    "gsettings set org.compiz.resize:/org/compiz/profiles/unity/plugins/resize/ use-desktop-average-color false",
    "gsettings set org.compiz.resize:/org/compiz/profiles/unity/plugins/resize/ border-color '#ffff00ff'",
    "gsettings set org.compiz.resize:/org/compiz/profiles/unity/plugins/resize/ fill-color '#29992e50'",
    "gsettings set org.gnome.desktop.interface gtk-theme 'Arc-Dark-Solid'",
    "gsettings set org.gnome.desktop.interface icon-theme 'Flat-Remix-Dark'",
    "gsettings set org.gnome.desktop.interface cursor-size 18",
    "gsettings set org.gnome.desktop.interface cursor-theme 'DMZ-Black'",
    "gsettings set org.gnome.desktop.wm.preferences theme 'Arc-Dark-Solid'",
    "rm -f ${HOME}/Pictures/background.png",
    "wget 'https://images5.alphacoders.com/937/937249.png' -O ${HOME}/Pictures/background.png",
    "gsettings set org.gnome.desktop.background picture-uri \"file:///${HOME}/Pictures/background.png\"",
    "gsettings set org.gnome.desktop.privacy report-technical-problems true"
  ]
}
